<%= provide(:title, 'Guestbook') %>
<%= provide(:current_page, 'guestbook') %>

<div class="blank-screen"></div>
<div class="white-screen">
	<h1 class="story"><span class="cursive">the</span> GUESTBOOK <%= image_tag("arrow.svg", alt: "arrow", class: "scroll-tip") %></h1>
	<div class="container content">
		<div class="page">
			<div id="guests" class="center"><%= link_to "See all guests", users_path %></div>


			<aside class="col-sm-3 col-md-3">
				<section class="user-info">
					<%= render 'shared/user_info' %>
				</section>
				<section class="micropost-form">
					<%= render 'shared/micropost_form' %>
				</section>
			</aside>

			<div class="posts col-sm-8 col-md-8">
				<% if Micropost.any? %>
					<ol class="microposts">
						<%= render @microposts %>
					</ol>
					<%= will_paginate @microposts %>
				<% end %>
			</div>
		</div>
	</div>
</div>