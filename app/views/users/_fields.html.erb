<%= filepicker_js_include_tag %>

<%= render 'shared/error_messages', object: f.object %>

<%= f.label :name %>
<%= f.text_field :name, placeholder: "Nicole Krukoff" %>

<%= f.label :email %>
<%= f.text_field :email, placeholder: "nicole@krukoff.com" %>

<%= f.label :relation %>
<%= f.text_field :relation, placeholder: "Bride" %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation %>

<div class="filepicker">
	<%= f.label :filepicker_url, "Upload an image:" %>
	<%= f.filepicker_field :filepicker_url, dragdrop: true, mimetypes: 'image/*', onchange: 'onImageUpload()', button_class: "btn btn-filepicker", id: "user_filepicker_url", name: "user[filepicker_url]" %>
</div>